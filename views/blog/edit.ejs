<% layout("layouts/boilerplate") -%>
<form
  action="/blogs/<%= toEditBlog._id %>?_method=PUT"
  method="post"
  novalidate
  class="needs-validation row"
>
  <div class="mb-3 col-6 offset-3">
    <label for="title" class="form-label">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      placeholder="Edit blog title.."
      value="<%= toEditBlog.title %>"
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>
  <div class="mb-3 col-6 offset-3">
    <label for="content" class="form-label">Content</label>
    <textarea
      class="form-control"
      placeholder="Write your content here"
      id="content"
      style="height: 100px"
      name="content"
      required
    >
<%= toEditBlog.content %></textarea
    >
    <div class="invalid-feedback">Content required</div>
  </div>
  <div class="mb-3 col-6 offset-3">
    <button class="btn btn-success">Submit</button>
  </div>
</form>
