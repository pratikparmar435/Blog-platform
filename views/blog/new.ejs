<% layout("layouts/boilerplate") %>
<form action="/blogs" method="post" class="row needs-validation" novalidate>
  <div class="mb-3 col-6 offset-3">
    <label for="title" class="form-label">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      placeholder="Write blog title.."
      required
    />
    <div class="valid-feedback">Looks good</div>
    <div class="invalid-feedback">Please give your blog a title</div>
  </div>
  <div class="mb-3 col-6 offset-3">
    <label for="content" class="form-label">Content</label>
    <textarea
      class="form-control"
      placeholder="Write your content here"
      id="content"
      style="height: 100px"
      name="content"
      required
    ></textarea>
    <div class="valid-feedback">Looks good</div>
    <div class="invalid-feedback">Please give write your content!</div>
  </div>
  <div class="mb-3 col-6 offset-3">
    <button class="btn btn-success">Submit</button>
  </div>
</form>
